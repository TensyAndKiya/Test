[mysql]
default-character-set=utf8mb4
[mysqld]
skip-name-resolve
port=3306
basedir=/usr/games/mysql8
datadir=/usr/games/mysql8/data
pid-file = /usr/games/mysql8/logs/mysql.pid
log-error=/usr/games/mysql8/logs/error.log
slow_query_log=1
slow_query_log-file=/usr/games/mysql8/logs/slow.log
expire_logs_days=10
max_connections=200
character-set-server=utf8mb4
default-storage-engine=INNODB
lower_case_table_names=1
max_allowed_packet=16M
explicit_defaults_for_timestamp=true
user=mysql